<div class="row">
  <table
    class="table table-striped table-borderless table-hover table-response shadow"
  >
    {{! Head }}
    <thead>
      <tr>
        <th>#</th>

        <th>Xem chi tiết</th>

        <th>Tên sản phẩm</th>
        <th>Giá</th>
        <th>Số lượng</th>

        <th>Sửa</th>
        <th>Xoá</th>
      </tr>
    </thead>

    {{! Body }}

    <tbody>
      {{#each products}}
        <tr>
          <th class="align-middle">{{increase @index}}</th>

          <td class="align-middle"><a
              class="btn"
              href="/sanpham/detail/{{this._id}}"
            ><i class="fa-regular fa-eye"></i></a></td>

          <td class="align-middle">{{shortText this.name 20}}</td>
          <td class="align-middle">{{shortText this.price 20}}</td>
          <td class="align-middle">{{this.quantity}}</td>

          <td class="align-middle"><a
              class="btn"
              href="/sanpham/update/{{this._id}}"
            ><i class="fa-regular fa-pen-to-square"></i></a></td>
          <td class="align-middle"><button
              class="btn"
              type="button"
              class="btn btn-primary"
              data-bs-toggle="modal"
              data-bs-target="#modal_{{this._id}}"
            ><i class="fa-regular fa-trash-can"></i></button>
          </td>
        </tr>
        <!-- The Modal -->
        <div class="modal" id="modal_{{this._id}}">
          <div class="modal-dialog">
            <div class="modal-content">
              <!-- Modal Header -->
              <div class="modal-header">
                <h4 class="modal-title">Xoá</h4>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                ></button>
              </div>
              <!-- Modal body -->
              <div class="modal-body">
                {{this.name}}
              </div>
              <!-- Modal footer -->
              <div class="modal-footer col-auto">
                <a
                  type="button"
                  class="btn btn-danger"
                  href="/sanpham/delete/{{this._id}}"
                >Yes</a>
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >No</button>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </tbody>

  </table>

</div>